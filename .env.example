# Discord Configuration
# Get your bot token from https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_GUILD_ID=your_guild_id_here

# GitHub Configuration (for Gist storage)
# Create a personal access token with 'gist' scope at:
# https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here
GITHUB_GIST_ID=your_gist_id_here

# Application Configuration
NODE_ENV=development
USE_GIST_STORAGE=true
PORT=3000

# Optional: Giphy API (for KIRK easter egg)
# Get your key at: https://developers.giphy.com/
GIPHY_API_KEY=your_giphy_api_key_here

# Optional: Special Guild IDs (comma-separated)
# Easter eggs marked as "special" will only work in these guilds
# Example: SPECIAL_GUILD_IDS=123456789,987654321
SPECIAL_GUILD_IDS=